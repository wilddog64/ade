{
    "variables": {
        "version": "",
        "repo": "bde_base",
        "private": "docker-reg.cloud.corp.dig.com:5000"
    },
    "builders": [
        {
            "type": "docker",
            "image": "hansode/centos-6-x86_64",
            "export_path": "./bde_devenv.tar.gz"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "/vagrant/scripts/portal.sh"
        },
        {
            "type": "file",
            "source": "/vagrant/etc/ade_supervisord.conf",
            "destination": "/etc/ade_supervisord.conf"
        }
    ],
    "post-processors": [
        {
            "type": "docker-import",
            "repository": "{{user `private`}}/bde_devenv",
            "tag": "{{user `version`}}",
            "run_command": [
                "run",
                "-t {{user `private`}}/bde_devenv",
                "-d",
                "supervisord -c /etc/ade_supervisord.conf && tail -f /dev/null"
            ]
        }
    ]
}
